// notdefined-
// it is displayed when any variable is not declared at the right time then not displayed is shown 
// eg-
let a=1;
let b=2;
console.log('a')
console.log('b')
console.log('c')
let c=3;
// here c is not consoled because the value and the variable was not declared before consoling



// variable-
// it can be declared globally and can be put everywhere in the program
// it is declared inside the function and can be assessed inside only
// 2 variables can be declared with the same name
// eg-
var a=1
var a=2

// let-
// the variable cannot be re declared
// can be declared with same name but with different numbers
// if it is used before declaration it doesnot initialize and gives an error
let a=1
console.log('a')
let a-4
console.log('a')


// constant-
// the variable remains constant and cannot be changed and it has to be initialized
// it can be updated once it is declared